{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contdistrapp.local/schemas/command-event.schema.json",
  "title": "RefDataCommandEvent",
  "type": "object",
  "required": ["dictCode", "eventType", "items"],
  "properties": {
    "eventId": { "type": "string", "format": "uuid" },
    "dictCode": { "type": "string" },
    "eventType": { "type": "string", "enum": ["SNAPSHOT", "DELTA"] },
    "sourceRevision": { "type": "integer" },
    "snapshotId": { "type": "string" },
    "chunkIndex": { "type": "integer", "minimum": 1 },
    "chunksTotal": { "type": "integer", "minimum": 1 },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["key", "op"],
        "properties": {
          "key": { "type": "string" },
          "op": { "type": "string", "enum": ["UPSERT", "DELETE"] },
          "payload": { "type": ["object", "null"] }
        }
      }
    }
  }
}
